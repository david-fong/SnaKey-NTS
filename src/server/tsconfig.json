{
	"extends": "../tsconfig-childbase.json",
	"compilerOptions": {
		// "module": "CommonJS", // do not >:( WebPack will handle this.
		"target": "es2021", // can use es2021 for node 16.
		"lib":   ["es2020"], // no dom.
		"types": ["my-type-utils", "node"],
		"paths": {
			"*":   ["./server/node_modules/*", "./node_modules/*", "../node_modules/*"],
			":*":  ["./base/*"],
			"::*": ["./server/*"],
		},
	},
	"references": [
		{ "path": "../base" },
	],
}
