{
    "compilerOptions": {
        // Language settings:
        "target": "es5",
        "lib": ["es6", "dom", "es2019.array",],
        "module": "ES6",

        // Project directory structure:
        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "./build/",

        // Emit flags:
        "removeComments": true,
        "alwaysStrict": true,

        // Console output:
        "pretty": true,
        "extendedDiagnostics": true,

        // Parsing rules:
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "strictBindCallApply": true,

        // Javascript handling:
        "allowJs": true,
        "checkJs": true,
    },
    "exclude": [
        "build/",
        "node_modules/",
        "**/node_modules/*",
    ]
}