{
    "compilerOptions": {
        // Language settings:
        "target": "es5",
        "lib": ["es6", "dom", "es2019.array",],
        "module": "ES6",
        "moduleResolution": "node", // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/23649#issuecomment-424355987

        // Project directory structure:
        "sourceMap": true,
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {},

        // Emit flags:
        "removeComments": true,
        "alwaysStrict": true,

        // Console output:
        "pretty": true,
        "extendedDiagnostics": true,

        // Parsing rules:
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "strictBindCallApply": true,
        //"strictPropertyInitialization": true,

        // Javascript handling:
        //"allowJs": true,
        //"checkJs": true,
    },
    "include": [
        "src/",
        "test/",
    ],
    "files": [
        "webpack.config.ts"
    ]
}