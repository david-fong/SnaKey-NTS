{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom", "es2019.array",],
        "module": "ES6",

        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "./build/",
        "sourceMap": true,

        "removeComments": true,
        "alwaysStrict": true,

        "pretty": true,
        //"traceResolution": true,
        "extendedDiagnostics": true,

        "allowJs": true,
        "checkJs": true,
    },
    "exclude": [
        "build/",
        "node_modules/",
        "**/node_modules/*",
    ]
}